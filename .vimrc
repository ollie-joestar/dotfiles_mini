" Enable line numbers and relative line numbers
set nu
set rnu

" Configure tab settings
set tabstop=4
set softtabstop=4
set shiftwidth=4
set noexpandtab  " Use literal tabs instead of spaces

" Enable smart indentation
set smartindent

" Enable line wrapping
set wrap

" Search settings: disable highlight but enable incremental search
set nohlsearch
set incsearch

" Enable true color support

" Set number of screen lines to keep above and below the cursor
set scrolloff=12

set runtimepath^=$HOME/.config/vim

colorscheme elflord
